<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="2dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="17dp"
            android:gravity="center"
            android:text="CONTACT US "
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:fontFamily="sans-serif" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdf"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_regular_padding"
            android:id="@+id/relative_call">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/call"
                android:tint="#9c9c9c"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_call"
                android:background="@drawable/circleshape"
                android:padding="@dimen/login_regular_padding"
                android:layout_marginLeft="@dimen/login_regular_padding"
                android:layout_marginRight="@dimen/login_regular_padding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Need help ? Call our call center anytime 24/7"
                android:fontFamily="sans-serif"
                android:layout_toEndOf="@+id/call" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_regular_padding">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/send_email"
                android:padding="@dimen/login_regular_padding"
                android:tint="#9c9c9c"
                android:src="@drawable/ic_email"
                android:layout_centerVertical="true"
                android:background="@drawable/circleshape"
                android:layout_marginLeft="@dimen/login_regular_padding"
                android:layout_marginRight="@dimen/login_regular_padding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Impressed or disappointed ? Send your feedback to us"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:layout_toEndOf="@+id/send_email" />




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_regular_padding">




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share"
                android:tint="#9c9c9c"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_share"
                android:background="@drawable/circleshape"
                android:layout_marginLeft="@dimen/login_regular_padding"
                android:padding="@dimen/login_regular_padding"
                android:layout_marginRight="@dimen/login_regular_padding"
                android:layout_marginBottom="28dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tell your friend and share the Joy"
                android:layout_alignTop="@+id/share"
                android:typeface="serif"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/share" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
