<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/subject_photo_size"
    app:cardCornerRadius="5dp"
    android:layout_margin="@dimen/login_regular_padding"
    android:orientation="vertical"
    app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <com.cardeanutrition.lishe360app.services.SquareImageViews
                    android:id="@+id/pictmasom"
                    android:layout_width="@dimen/subject_photo_size"
                    android:layout_height="match_parent"
                    android:src="@drawable/blank_profile_image"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="@dimen/subject_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/Maintitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alessandro Barreto"
                            android:fontFamily="sans-serif"
                            android:paddingTop="@dimen/login_regular_padding"
                            android:paddingBottom="3dp"
                            android:paddingLeft="@dimen/login_regular_padding"
                            android:textColor="#444444"
                            android:paddingRight="@dimen/login_regular_padding"
                            android:textSize="@dimen/header_text_size"
                            android:textStyle="bold"
                            android:maxLines="2"/>


                        <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#aaaaaa"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/login_regular_padding"
                            android:paddingLeft="@dimen/login_regular_padding"
                            android:maxLines="2"
                            android:layout_below="@id/Maintitle"
                            android:fontFamily="sans-serif"
                            android:text="Time Goes Here"
                            android:textSize="@dimen/content_text_size"/>


                        <TextView
                            android:id="@+id/timeposted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/login_regular_padding"
                            android:paddingLeft="@dimen/login_regular_padding"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textSize="@dimen/username_text_size"
                            android:layout_gravity="start"
                            android:textColor="@color/primary"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/navigation_width"
                    android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/image_navigation_width"
                            android:layout_height="@dimen/image_navigation_width"
                            android:padding="@dimen/login_regular_padding"
                            android:src="@drawable/ic_navigate_next"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>